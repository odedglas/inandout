{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      ".read": true,
      ".write": false,
      "$user_id": {
        ".write": "$user_id === auth.uid"
      }
    },
    "projects": {
      ".read": "false",
      ".write": "false",
      ".indexOn": [
        "owner"
      ],
      "$projectId": {
        ".read": "root.child('users').child(auth.uid).child('projects').child($projectId).exists()",
        ".write": "!data.exists() || root.child('users').child(auth.uid).child('projects').child($projectId).exists()",
        "excludedCategories": {
          ".indexOn": [
            ".value"
          ]
        }
      }
    },
    "transactions": {
      ".read": false,
      ".write": false,
      "$projectId": {
        ".read": "root.child('users').child(auth.uid).child('projects').child($projectId).exists()",
        ".write": "root.child('users').child(auth.uid).child('projects').child($projectId).exists()",
      }
    },
    "categories": {
      ".read": true,
      ".write": false
    },
    "projectsIdentifier": {
      ".read": true,
      ".write": true
    },
    "notifications": {
      ".read": false,
      ".write": true,
      "$email": {
        ".read": "$email.replace('_','.') === auth.email"
      }
    }
  }
}
